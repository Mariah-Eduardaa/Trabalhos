<h1>Coloque o mouse sobre o cachorro para anim√°-lo!</h1>
<img id="cachorro" src="cachorro_triste.png" alt="Cachorro" />

<script>
    const cachorro = document.getElementById('cachorro');

    cachorro.addEventListener('mouseenter', () => {
        cachorro.src = 'https://i.pinimg.com/originals/6b/dd/5b/6bdd5b8ae02cf935f880de1831980028.jpg'; 
    });

    cachorro.addEventListener('mouseleave', () => {
        cachorro.src = 'https://images-wixmp-ed30a86b8c4ca887773594c2.wixmp.com/f/c2047868-eb3f-45a9-84ac-a12510bfedd9/dfy15fl-1bf22faa-1c30-4579-8db2-f2e05b3dada8.png/v1/fill/w_800,h_800/bolt__by_dracoawesomeness_dfy15fl-fullview.png?token=eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9..MGBQTiNbOGjXt1fxEo4K3zUuXjV-co_XGkW_gWiLcBQ'; 
    });
</script>

